
# Daily Notes Aliases
dn() {
  echo " * $1" >> ~/dn/$(date "+%Y-%m-%d")
}

dno() {
  echo " * $2" >> ~/dn/$1
}

# edit note for a given date, e.g. dnoe 2019-11-02
# if no date given, vim lists the ~/dn folder, then pick one to edit
dnoe() {
  vim ~/dn/$1
}

dnt() {
  echo $(date "+%Y-%m-%d")
  cat ~/dn/$(date "+%Y-%m-%d")
}

# edit today's note with vim
dnte() {
  vim ~/dn/$(date "+%Y-%m-%d")
}
  
dnview() {
  find ~/dn/$1* -type f -exec basename {} \; -exec cat {} \;
}
